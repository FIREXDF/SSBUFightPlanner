{
    "name": "fightplanner",
    "version": "3.3.26",
    "description": "A SSBU Mod Manager",
    "author": "Shattered Chaos",
    "main": "main.js",
    "license": "FOSS",
    "keywords": [
        "mod",
        "manager",
        "electron"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/FIREXDF/SSBUFightPlanner.git"
    },
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "build": "electron-builder --win --x64",
        "buildandpublish": "electron-builder --win --x64 --publish always",
        "early": "electron-builder --win --x64 --config canary-builder.json --publish always",
        "help": "electron-builder --help"
    },
    "dependencies": {
        "@sentry/electron": "^6.9.0",
        "adm-zip": "^0.5.16",
        "axios": "^1.7.7",
        "date-fns": "^4.1.0",
        "discord-rpc": "^4.0.1",
        "electron-log": "^5.2.2",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.3.9",
        "fs-extra": "^10.1.0",
        "node-7z": "^3.0.0",
        "original-fs": "^1.2.0",
        "posthog-js": "^1.260.1",
        "sanitize-html": "^2.15.0",
        "toml": "^3.0.0"
    },
    "devDependencies": {
        "electron": "^36.3.2",
        "electron-builder": "^24.0.0",
        "node-gyp": "^11.2.0"
    },
    "build": {
        "appId": "com.shatteredchaos.fightplanner",
        "productName": "FightPlanner",
        "publish": [
            {
                "provider": "github",
                "owner": "FIREXDF",
                "repo": "SSBUFightPlanner"
            }
        ],
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "installerIcon": "./build/installerIcon.ico",
            "installerSidebar": "./build/installerSidebar.bmp",
            "uninstallerIcon": "./build/uninstallerIcon.ico",
            "artifactName": "${productName}-${version}.${ext}",
            "createDesktopShortcut": "always",
            "createStartMenuShortcut": true,
            "deleteAppDataOnUninstall": true,
            "runAfterFinish": true,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "**/*",
            "!**/*.{ts,map}",
            "!*.{code-workspace,log}",
            "!LICENSE.md",
            "!README.md",
            "!electron-builder.yml",
            "!dist/",
            "!dist-canary/",
            "!e2e/",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/*.{md,markdown,txt}",
            "!**/node_modules/*/LICENSE",
            "!**/node_modules/*/license",
            "!*/node_modules/",
            "preload.js",
            "!gifs/",
            "src/**/*",
            "!custom.css",
            "src/resources/bin/7z.exe",
            "src/resources/reslot/ui_chara_db.txt"
        ],
        "extraResources": [
            {
                "from": "./build",
                "to": "build",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "src/resources",
                "to": "src/resources",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "compression": "maximum",
        "protocols": {
            "name": "fightplanner",
            "schemes": [
                "fightplanner"
            ]
        }
    },
    "win": {
        "target": "nsis",
        "icon": "build/icon.ico",
        "publisherName": "FIREXDF",
        "verifyUpdateCodeSignature": false,
        "requestedExecutionLevel": "asInvoker",
        "certificateFile": "fightplanner.pfx",
        "certificatePassword": "F0w2Ke7?$rW#",
        "publish": [
            "github"
        ]
    }
}
